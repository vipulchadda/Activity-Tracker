{
    "steps": [
        {
            "name": "gcr.io/cloud-builders/gcloud",
            "args": [
                "beta",
                "functions",
                "deploy",
                "track-activity",
                "--source=./server",
                "--trigger-http",
                "--runtime=python37",
                "--entry-point=track_activity",
                "--allow-unauthenticated",
                "--region=northamerica-northeast1",
                "--project=${PROJECT_ID}"
            ]
        },
        {
            "name": "gcr.io/cloud-builders/gcloud",
            "args": [
                "alpha",
                "functions",
                "add-iam-policy-binding",
                "track-activity",
                "--region=northamerica-northeast1",
                "--project=${PROJECT_ID}",
                "--member=allUsers",
                "--role=roles/cloudfunctions.invoker"
            ]
        },
        {
            "name": "gcr.io/cloud-builders/gcloud",
            "args": [
                "beta",
                "functions",
                "deploy",
                "get-day-summary",
                "--source=./server",
                "--trigger-http",
                "--runtime=python37",
                "--entry-point=get_day_summary",
                "--allow-unauthenticated",
                "--region=northamerica-northeast1",
                "--project=${PROJECT_ID}"
            ]
        },
        {
            "name": "gcr.io/cloud-builders/gcloud",
            "args": [
                "alpha",
                "functions",
                "add-iam-policy-binding",
                "get-day-summary",
                "--region=northamerica-northeast1",
                "--project=${PROJECT_ID}",
                "--member=allUsers",
                "--role=roles/cloudfunctions.invoker"
            ]
        }
    ]
}
